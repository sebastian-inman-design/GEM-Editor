{
  "name": "gem-game-editor",
  "version": "1.0.1",
  "description": "GEM Map Editor",
  "author": {
    "name": "Sebastian Inman",
    "email": "sebastian@seedscs.com",
    "url": "https://sebastianinman.me"
  },
  "private": true,
  "main": "electron.js",
  "build": {
    "appId": "com.electron.${name}",
    "productName": "GEM Game Editor",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "package.json",
      "electron.js",
      "scripts/",
      "node_modules/",
      "build/",
      "!node_modules/.cache"
    ],
    "mac": {
      "target": "zip",
      "category": "public.app-category.games",
      "darkModeSupport": true,
      "icon": "icon.icns"
    },
    "win": {
      "target": "zip",
      "icon": "icon.ico"
    }
  },
  "scripts": {
    "start": "env NODE_ENV=dev electron .",
    "serve": "vue-cli-service serve --port 5000",
    "dev": "npm run serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mw",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "@fortawesome/vue-fontawesome": "^0.1.9",
    "core-js": "^3.4.4",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.11",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@types/uuid": "^3.4.6",
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-plugin-pwa": "^4.1.2",
    "@vue/cli-plugin-router": "^4.1.2",
    "@vue/cli-plugin-typescript": "^4.1.0",
    "@vue/cli-plugin-vuex": "^4.1.2",
    "@vue/cli-service": "^4.1.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "typescript": "~3.5.3",
    "uuidv4": "^6.0.1",
    "vue-svg-loader": "^0.15.0",
    "vue-template-compiler": "^2.6.10"
  }
}
